extends layout 

block content 
    h1 Delete Category: #{category.name}


    if category_items

        p #[strong Delete the following items before deleting the Category:]

        div
            h4 Items 

            dl 
            each item in category_items
                dt
                    a(href=item.item.url) #{item.item.name}
        
    else 

        p Do you really want to delete this Category?

        form(method="POST" action='')
            .form-group 
                input#id.form-control(type='hiden', name='id', required='true', value=category._id)

            button.btn.btn-primary(type='submit') Delete
