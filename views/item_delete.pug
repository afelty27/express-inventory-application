extends layout 

block content 

    h1 #{title}

    p #[strong Name:] #{item.name} 
    p #[strong Description:] #{item.description} 
    p #[strong Price:] $#{item.price} 
    p #[strong Stock:] #{item.number_in_stock} 
    p #[strong Category: ]
        each cat in item.category 
            a(href=cat.url) #{cat.name} 

    if item_instances.length 

        p #[strong Delete the following items before deleting item type: ]

        div
            h4 Instances 

            each item_copy in item_instances 
                p #[strong Id: ]
                    a(href=item_copy.url) #{item_copy._id} 

    else 
        p Do you really want to delete this Item?

        form(method='POST' action='')
            .form-group 
                input#id.form-control(type='hidden', name='id', required='true', value=item._id)

            button.btn.btn-prinary(type='submit') Delete