extends layout 

block content 

    h1 #{title} 

    p #[strong Do you really want to delete this item Instance?]

    div(style="margin-left:20px;")

        p ID:  #{iteminstance.item._id}

        p Name: 
            a(href=iteminstance.item.url) #{iteminstance.item.name} 

        p Status: #{iteminstance.status}

    form(method="POST", action='')
        .form-group 
            input#id.form-control(type='hidden', name='id', required='true', value=iteminstance._id)

        button.btn.btn-primary(type='submit') Delete
