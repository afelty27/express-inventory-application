extends layout

block content
  h1= title

  p Item: #{item.name}
  p Price: $#{item.price}
  p Description: #{item.description}
  p Category: #{item.category[0].name}
  p Current Stock: #{item.number_in_stock}


  hr
  p 
    a(href=item.url+'/delete') Delete Item 
  p 
    a(href=item.url+'/update') Update Item